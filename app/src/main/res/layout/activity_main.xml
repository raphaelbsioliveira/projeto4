<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Digite um nÃºmero de 0 a 100"
        android:textColorLink="#F5F5F5"
        android:textSize="25sp"
        android:padding="5sp"
        android:gravity="center"
        android:background="#D8E9FA"
        android:layout_margin="8dp"/>


    <TextView
        android:id="@+id/entradaValor"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#C4D1DD"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="verdana"
        android:gravity="center"
        android:padding="12sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Conferir"
        android:textSize="36sp"
        android:onClick="conferir"
        android:background="#B8B9BD"
        android:padding="12sp"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:textColor="#1E1F20"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/resultado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="36sp"
        android:textColor="#1E1F20"
        android:layout_marginTop="30dp"/>


</LinearLayout>